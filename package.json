{
  "scripts": {
    "test": "npm run test:cafe",
    "test:cafe": "testcafe $BROWSER:headless tests/cafe/*.js -s build/test --app-init-delay 1000 --app \"rollup -c example/rollup.config.mjs -w\""
  },
  "devDependencies": {
    "testcafe": "^1.9.1"
  },
  "template": {
    "properties": {
      "rollup.config": "examples/rollup.config.mjs"
    },
    "mergers": [
      {
        "type": "YAML",
        "pattern": ".github/workflows/*.yml",
        "options": {
          "messagePrefix": "chore(actions): ",
          "mergeHints": {
            "*": {
              "removeEmpty": true
            },
            "*.node": {
              "scope": "deps",
              "merge": "mergeVersionsPreferNumeric"
            },
            "*.steps": {
              "key": "id|name|uses|run"
            }
          }
        }
      }
    ],
    "inheritFrom": [
      "arlac77/template-web-component"
    ]
  }
}
